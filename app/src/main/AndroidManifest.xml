<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vt6002cem_assignment2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/onlineshop"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity android:name="com.example.vt6002cem_assignment2.profile.ProfileFragment"
            tools:ignore="Instantiatable"></activity>
        <activity
            android:name="com.example.vt6002cem_assignment2.order_record.RecordFragment"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.vt6002cem_assignment2.shoppingcart.ShoppingcartActivity" />
        <activity android:name="com.example.vt6002cem_assignment2.ArCore.ArcoreActivity" />
        <activity android:name="com.example.vt6002cem_assignment2.Sign.SignupActivity" />
        <activity android:name="com.example.vt6002cem_assignment2.Sign.ForgetpasswordActivity" />
        <activity
            android:name="com.example.vt6002cem_assignment2.Sign.LoginFragment"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.vt6002cem_assignment2.product.Productdetail.ProductdetailActivity" />
        <activity
            android:name="com.example.vt6002cem_assignment2.product.ProductFragment"
            tools:ignore="Instantiatable" />
        <activity
            android:name="com.example.vt6002cem_assignment2.home.HomepageFragment"
            tools:ignore="Instantiatable" />
        <activity android:name="com.example.vt6002cem_assignment2.HomeActivity" />
        <activity android:name="com.example.vt6002cem_assignment2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>